<apex:page renderAs="pdf" controller="SOM_InvoiceDocumentController">
    <apex:stylesheet value="{!URLFOR($Resource.SOMInvoiceDocumentStyle, 'invoiceDocument.css')}"/>
    <!-- footer -->
    <div id="footer_content">
        <apex:image style="display:block;margin-left:auto;margin-right:auto;margin-bottom:20px;" url="{!URLFOR($Resource.InvoiceRessources, 'Logos/Monogram/Rimowa-Monogram.png')}" width="35" height="45" alt="RIMOWA"/>
        <!-- <apex:outputText value="{!invoiceConfigs['PDF_LABEL_REGISTER']}"/>&nbsp;<apex:outputText value="{!invoiceConfigs['PDF_REGISTER_CITY']}"/> <apex:outputText value="{!invoiceConfigs['PDF_LABEL_COURT']}"/>&#44;&nbsp;<apex:outputText value="{!invoiceConfigs['PDF_REGISTER']}"/> <apex:outputText value="{!invoiceConfigs['PDF_MANAGING_DIRECTOR']}"/>&nbsp;&#45;&nbsp;<apex:outputText value="{!invoiceConfigs['PDF_VAT_ID']}"/>  -->
    </div>
    <!-- header -->
    
        <div id="header"> 
            <apex:image style="display:block;margin-left:auto;margin-right:auto;margin-bottom:auto;margin-top:70px;" url="{!URLFOR($Resource.InvoiceRessources, 'Logos/RIMOWA/RIMOWA.jpg')}" width="200" height="60" alt="RIMOWA"/>
            <!-- <div class="logo_header"></div> -->
        </div>
        <div class="div1"></div>

            <table class="head" >
     
                <tr>
                    <!-- Company Information-->
                    <td class="Comp_Inf">
                        <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/header.PNG')}" width="100%" height="100%" style="padding-left:50%;margin-top:-3px" alt="RIMOWA"/>
                    </td>
                    <td class="Comp_Inf">
                        <apex:outputText value="{!invoiceConfigs['PDF_PHONE']}"/> <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/Phone.PNG')}" width="10%" height="10%" style="margin-top:-2px" alt="RIMOWA"/><br/>
                        <apex:outputText value="{!invoiceConfigs['PDF_MAIL']}"/><br/>
                        RIMOWA.COM | @RIMOWA<br/>
                        <apex:outputText value="{!invoiceConfigs['PDF_VAT_ID_COUNTRY']}"/>
                    </td>
                </tr>
            </table>
            <div class="div2">
                <h3> TAX INVOICE <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/taxInvoice.PNG')}" width="15%" height="15%" style="margin-top:-4px" alt="RIMOWA"/></h3> 
            </div>

    <div class="content">
        <table class="billing_contact_importer">
            <tr>
                <!-- Billing contact information -->
                <td class="Bill_Contact_Inf">
                    BILLING CONTACT <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/BillingContact.PNG')}" width="25%" height="15%" style="margin-top:-2px" alt="RIMOWA"/>
                    <apex:outputText value="{!invoiceDoc.billingContact.name}"/><br/>
                    <apex:outputText value="{!invoiceDoc.billingContact.company}"/><br/>
                    <apex:outputText value="{!invoiceDoc.billingContact.address}"/><br/>
                    <apex:outputText value="{!invoiceDoc.billingContact.zipCode}"/>{!IF(ISBLANK(invoiceDoc.billingContact.zipCode),'',' ')}<apex:outputText value="{!invoiceDoc.billingContact.city}"/><br/>
                    <apex:outputText value="{!invoiceDoc.billingContact.state + '  '}"/><apex:outputText value="{!invoiceDoc.billingContact.country}"/>
                </td>
                <td class="Bill_Contact_Inf">
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_TITLE']}"/>
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_VALUE_LINE_1']}"/><br/>
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_VALUE_LINE_2']}"/><br/>
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_VALUE_LINE_3']}"/><br/>
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_VALUE_LINE_4']}"/><br/>
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_TAX_NO_TITLE']}"/>
                    <apex:outputText rendered="{!IF(len(invoiceConfigs['IMPORTER_TAX_NO_TITLE']) > 0, TRUE, FALSE)}" value=":"/>&nbsp;
                    <apex:outputText value="{!invoiceConfigs['IMPORTER_TAX_NO_VALUE']}"/><br/>
                    <apex:outputText value="{!invoiceConfigs['EORI_TITLE']}"/>
                    <apex:outputText rendered="{!IF(len(invoiceConfigs['EORI_TITLE']) > 0, TRUE, FALSE)}" value=":"/>&nbsp;
                    <apex:outputText value="{!invoiceConfigs['EORI_VALUE']}"/><br/>
                </td>
            </tr>
        </table>
        <table class="metadata_delivery_contact">
            <tr>
                <!-- Invoice information -->
                <td class="Invoice_Inf">
                    <span class="fett">INVOICE NUMBER&nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/InvoiceNumber.PNG')}" width="17%" height="17%" style="margin-top:-3px" alt="RIMOWA"/> :&nbsp; <apex:outputText value="{!invoiceDoc.documentNumber}"/></span><br/>
                    INVOICE DATE&nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/InvoiceDate.PNG')}" width="18%" height="18%" style="margin-top:-3px" alt="RIMOWA"/> :&nbsp;<apex:outputText value="{!invoiceDoc.invoiceDate}"/><br/>
                    ORDER NUMBER&nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/OrderNumber.PNG')}" width="20%" height="20%" style="margin-top:-3px" alt="RIMOWA"/> :&nbsp;<apex:outputText value="{!invoiceDoc.orderNumber}"/><br/>
                    TERM OF DELIVERY<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/TermDelivery.PNG')}" width="22%" height="22%" style="margin-top:-3px" alt="RIMOWA"/> :&nbsp;<apex:outputText value="{!invoiceConfigs['TERM_OF_DELIVERY_VALUE']}"/><br/>
                    <apex:outputText value="{!invoiceConfigs['CUSTOMER_VAT_ID_IDENTIFIER']}"/> <!-- To verify 'VAT_ID_CUSTOMER' key --><br/>
                    
                   
                </td>
                <!-- Delivery contact information -->
                <td class="Invoice_Inf" style="text-align: left;margin-left:-20px; padding-left: 80px" >
                    DELIVERY CONTACT <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/DeliveryContact.PNG')}" width="26%" height="25%" style="margin-top:-3px" alt="RIMOWA"/><br/>
                    <apex:outputText value="{!invoiceDoc.deliveryContact.name}"/><br/>
                    <apex:outputText value="{!invoiceDoc.deliveryContact.company}"/><br/>
                    <apex:outputText value="{!invoiceDoc.deliveryContact.address}"/><br/>
                    <apex:outputText value="{!invoiceDoc.deliveryContact.zipCode}"/>{!IF(ISBLANK(invoiceDoc.billingContact.zipCode),'',' ')}<apex:outputText value="{!invoiceDoc.deliveryContact.city}"/><br/>
                    <apex:outputText value="{!invoiceDoc.deliveryContact.state + '  '}"/><apex:outputText value="{!invoiceDoc.deliveryContact.country}"/>
                </td>
            </tr>
        </table>
        <div id="correctiveInvoiceMessage">
            <apex:outputPanel rendered="{!correctiveInvoiceHeaderMessage != null}">
                <apex:outputText styleClass="italicbold" value="{!correctiveInvoiceHeaderMessage}"/>
            </apex:outputPanel>
        </div>
        <div class="invoiceLine">
            <br/>
            TRACKING NUMBERS<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/TrackingNumbers.PNG')}" width="8%" height="8%" style="margin-top:-2px" alt="RIMOWA"/> :&nbsp;<apex:outputText style="text-transform: uppercase;" value="{!invoiceDoc.trackingNumbers}"/>
        </div>
        <br/>
        <br/>
        <table class="articles">
            <!-- Invoice line items-->
            <thead>
                <tr>
                    <th width="50px">ITEM DESCRIPTION&nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/ItemDesc.PNG')}" width="25%" height="25%" style="margin-top:-2px" alt="RIMOWA"/></th>
                    <th width="20px">QUANTITY <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/Quantity.PNG')}" width="33%" height="33%" style="display: block;margin-top:-2px" alt="RIMOWA"/> </th>
                    <th width="27px">NET AMOUNT <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/NetAmount.PNG')}" width="46%" height="46%" style="display:block; margin-top:-3px" alt="RIMOWA"/></th>
                    <th width="27px" class="align-right">VAT AMOUNT <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/GrossAmount.PNG')}" width="100%" height="100%" style="display:block; margin-top:-3px" alt="RIMOWA"/></th>
                    <th width="27px" class="align-right">TOTAL <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/Total.PNG')}" width="80%" height="80%" style="margin-left: 74%;display:block; margin-top:-3px; " alt="RIMOWA"/></th>
                </tr>
                <tr>
                    <th width="70px" colspan="2">ITEM NO. &nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/ItemNo.PNG')}" width="16%" height="16%" style="margin-top:-2px" alt="RIMOWA"/></th>
                    <th width="27px" class="align-right">&nbsp;</th>
                    <th width="27px" class="align-right">&nbsp;</th>
                    <th width="27px">&nbsp;</th>
                </tr>
                <tr>
                    <th colspan="5">SERIAL NO.  &nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/SerialNumber.PNG')}" width="13%" height="13%" style="margin-top:-3px" alt="RIMOWA"/></th>
                </tr>
                <tr>
                    <th colspan="5" class="border_bottom">HS CODE &nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/HSCode.PNG')}" width="14%" height="14%" style="margin-top:-2px" alt="RIMOWA"/></th>
                </tr>

            </thead>
            <tbody class="InvoiceLineItem">
                <!-- loop invoice line items-->
                <apex:repeat value="{!invoiceDoc.lineItems}" var="lineItem">
                    <tr class="lineIem">
                        <td><apex:outputText value="{!lineItem.itemDescription}"/></td>
                        <td><apex:outputText value="{!lineItem.quantity}"/></td>
                                                
                        <td><apex:outputText value="{!lineItem.netAmount}"/>&nbsp;<apex:outputText value="{!invoiceDoc.currencyCode}"/></td>
                        <td class="align-right"><apex:outputText value="{!lineItem.vat}"/>&nbsp;<apex:outputText value="{!invoiceDoc.currencyCode}"/></td>
                        <td class="align-right"><apex:outputText value="{!lineItem.total}"/>&nbsp;<apex:outputText value="{!invoiceDoc.currencyCode}"/></td>
                    </tr>
                    <tr>
                        <td colspan="5"><apex:outputText value="{!lineItem.itemNumber}"/></td>
                    </tr>
                    <tr>
                        <td colspan="5"><apex:outputText value="{!lineItem.serialNumber}"/>&nbsp;</td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <apex:outputText rendered="{!IF(len(lineItem.hsCode) > 0, TRUE, FALSE)}"  value=" {!lineItem.hsCode},"/>&nbsp;
                            <apex:outputText rendered="{!IF(len(lineItem.hsCodeDescription) > 0, TRUE, FALSE)}" value="{!lineItem.hsCodeDescription},"/>&nbsp;
                            <apex:outputText rendered="{!IF(len(lineItem.coo) > 0, TRUE, FALSE)}" value="COO: {!lineItem.coo}"/>&nbsp;
                        </td>
                    </tr>

                </apex:repeat>
                <!-- end loop-->
            </tbody>
        </table>
        <table class="sum" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <td width="100%" class="border_top" style="padding-top:2px;">SUBTOTAL (NET)&nbsp;<apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/Subtotal.PNG')}" width="32%" height="32%" style="margin-top:-4px" alt="RIMOWA"/>:</td>
                    <td  class="align-right border_top"><apex:outputText value="{!invoiceDoc.netSubTotal}"/>&nbsp;<apex:outputText value="{!invoiceDoc.currencyCode}"/></td>
                </tr>
                <!-- loop over vat rate -->

            <apex:repeat value="{!invoiceTaxLineItems}" var="key">
                <tr>
                    <td width="100%" class="" style="padding-top: 3px;">PLUS TAX&nbsp;<apex:outputText value="{!key}"/> % <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/PlusTax.PNG')}" width="25%" height="25%" style="margin-top:-3px" alt="RIMOWA"/>:</td>
                    <td  class="align-right" style="padding-top: 3px;"><apex:outputText value="{!invoiceTaxLineItems[key]}"/>&nbsp;<apex:outputText value="{!invoiceDoc.currencyCode}"/></td>
                </tr>
            </apex:repeat>
                <!-- end loop-->
                <tr>
                    <td colspan="2">&nbsp;</td>
                </tr> 
                <tr>
                    <td class="border_top" width="100%" style="padding-top:2px;">TOTAL INCL. TAX &nbsp; <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/TotalWithTax.PNG')}" width="35%" height="35%" style="margin-top:-3px" alt="RIMOWA"/>:</td>
                    <td class="align-right border_top"><apex:outputText value="{!invoiceDoc.totalWithTax}"/>&nbsp;<apex:outputText value="{!invoiceDoc.currencyCode}"/></td>
                </tr>
            </tbody>  
        </table>
        <div class="footer_text"> 
            <div class="paymentType">
                THE TOTAL AMOUNT HAS BEEN PAID VIA&nbsp;<apex:outputText value="{!invoiceDoc.paymentType}"/>. THE INVOICE DATE IS THE SAME AS THE DATE OF THE SERVICE.
                <br/><apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/parag1.1.PNG')}" width="17%" height="17%" style="margin-top:-2px" alt="RIMOWA"/><apex:outputText value="{!invoiceDoc.paymentType}"/> <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/parag1.2.PNG')}" width="12%" height="12%" style="margin-top:-3px" alt="RIMOWA"/>
            </div><br/><br/><br/>
            
            <div class="paymentType"> 
                PLEASE RETAIN THIS INVOICE FOR 5 YEARS FROM THE DATE OF PURCHASE (INVOICE DATE). THIS INVOICE IS YOUR PROOF OF GUARANTEE! <br/>
                <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/parag2.PNG')}" width="45%" height="45%" style="margin-top:-3px" alt="RIMOWA"/>
            </div>
            <div>
                OUR CLIENT CARE TEAM IS HAPPY TO ANSWER ANY QUESTIONS YOU MAY HAVE. YOU CAN REACH US UNDER:<br/>
                <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/parag3.PNG')}" width="35%" height="35%" style="margin-top:-3px" alt="RIMOWA"/>
            </div> <br/>
            <div class="paymentType">
                <apex:outputText value="{!invoiceConfigs['PDF_PHONE_SERVICE']}"/><br/>
                <apex:outputText value="{!invoiceConfigs['PDF_MAIL_SERVICE']}"/><br/>
                <br/>
                THANK YOU FOR YOUR PURCHASE, YOUR RIMOWA TEAM
                <apex:image url="{!URLFOR($Resource.InvoiceRessources, 'ArabicRessources/parag4.PNG')}" width="17%" height="17%" style="margin-top:-3px" alt="RIMOWA"/>
            </div>
        </div>
    </div>
</apex:page>