<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>TaxCode_Controlle</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
  ISBLANK(taxCode__c),
  LEN(taxCode__c) &lt;&gt; 2
)</errorConditionFormula>
    <errorMessage>The field should contain 2 characters and should not be empty</errorMessage>
</ValidationRule>
