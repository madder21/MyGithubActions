<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>TaxCode_Controlle</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(taxCode__c)), 
    NOT(REGEX(taxCode__c, &quot;^.{2}$&quot;))
)</errorConditionFormula>
    <errorMessage>The value of the field should be in two characters.</errorMessage>
</ValidationRule>
