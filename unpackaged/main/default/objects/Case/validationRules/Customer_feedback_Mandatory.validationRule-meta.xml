<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Customer_feedback_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
$Permission.ByPassVR = FALSE,
NegativeFeedback__c = true, 
ISBLANK(CustomerFeedback__c)
)</errorConditionFormula>
    <errorDisplayField>CustomerFeedback__c</errorDisplayField>
    <errorMessage>You have selected &quot;Customer Unsatisfied&quot;, complete the field &quot;Customer Feedback&quot;.</errorMessage>
</ValidationRule>
