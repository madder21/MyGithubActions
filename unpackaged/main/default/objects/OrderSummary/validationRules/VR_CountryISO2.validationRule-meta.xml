<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR_CountryISO2</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
    ISBLANK(BillingCountry),
    NOT(REGEX(BillingCountry, &quot;^[A-Z]{2}$&quot;))
)</errorConditionFormula>
    <errorMessage>The value should be in Uppercase (2 characters)  and should not be empty.</errorMessage>
</ValidationRule>
