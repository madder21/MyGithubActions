<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Deliver_To_Country_ISO_2</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
OR(
ISBLANK(DeliverToCountry),
NOT(REGEX(DeliverToCountry, &quot;^[A-Z]{2}$&quot;))
),
$Profile.Name = &quot;System Administrator&quot;
)</errorConditionFormula>
    <errorMessage>The value should be in Uppercase (2 characters)  and should not be empty. </errorMessage>
</ValidationRule>
