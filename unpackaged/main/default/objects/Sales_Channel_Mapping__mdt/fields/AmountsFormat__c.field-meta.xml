<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AmountsFormat__c</fullName>
    <description>This field designates the decimal and thousands separators chosen by each country.</description>
    <externalId>false</externalId>
    <fieldManageability>SubscriberControlled</fieldManageability>
    <inlineHelpText>EX : for AE Zone, the format is ###,##0.00; the comma represents the thousands separator and the dot represents the decimal separator.
https://en.wikipedia.org/wiki/Decimal_separator
https://www.smartick.com/blog/other-contents/curiosities/decimal-separators/</inlineHelpText>
    <label>Amounts Format</label>
    <required>false</required>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>##0.00</fullName>
                <default>true</default>
                <label>##0.00</label>
            </value>
            <value>
                <fullName>##0,00</fullName>
                <default>false</default>
                <label>##0,00</label>
            </value>
            <value>
                <fullName>###,##0.00</fullName>
                <default>false</default>
                <label>###,##0.00</label>
            </value>
            <value>
                <fullName>###.##0,00</fullName>
                <default>false</default>
                <label>###.##0,00</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>
