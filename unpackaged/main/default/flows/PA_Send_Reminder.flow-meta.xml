        <name>f_ReminderSubject</name>
        <dataType>String</dataType>
        <expression>{!$Label.LABS_AP_Task_Subject_BookingReminder} + &quot; &quot; +
IF( 
   ISNULL({!clientBooking.Salutation__c}) ||  ISBLANK({!clientBooking.Salutation__c}) ,
    &quot;&quot;, 
    {!clientBooking.Salutation__c} + &quot; &quot; 
) 
+ {!clientBooking.Firstname__c} + &quot; &quot; + {!clientBooking.Lastname__c} 
+ &quot; - Booking Number : &quot; + {!clientBooking.ConfirmationNumber__c}</expression>
    </formulas>
