    <formulas>
        <name>FX_CalculateRefundFromPartialCancelation</name>
        <dataType>Currency</dataType>
        <expression>{!L10_Canceled_Items.QuantityCanceled} * {!L10_Canceled_Items.GrossUnitPrice}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>FX_Generate_Refunded_Items</name>
        <dataType>String</dataType>
        <expression>if(ISBLANK({!V_Refunded_Items})  , &quot;&quot; , BR() ) +
&quot;- SKU: &quot; + {!Iterate_Over_Order_Items_Summaries.StockKeepingUnit} + 
&quot;; Quantity: &quot; + TEXT({!Iterate_Over_Order_Items_Summaries.QuantityCanceled}) + 
&quot;; UnitPrice: &quot; + TEXT({!Iterate_Over_Order_Items_Summaries.GrossUnitPrice}) + 
&quot;; TotalAmount: &quot; +TEXT({!Iterate_Over_Order_Items_Summaries.GrossUnitPrice} * {!Iterate_Over_Order_Items_Summaries.QuantityCanceled})</expression>
    </formulas>
    <formulas>
        <name>FX_Refund_Origin</name>
        <dataType>String</dataType>
        <expression>if(TEXT({!Get_Order_Summary_fields_with_derived_value.Status}) == &quot;Canceled&quot; , &quot;Full Cancelation&quot; , &quot;Partial Cancelation&quot;)</expression>
    </formulas>
    <formulas>
        <name>FX_Refunded_Items_For_PartialCancelation</name>
        <dataType>String</dataType>
        <expression>if(ISBLANK({!V_Refunded_Items})  , &quot;&quot; , BR() ) +
&quot;- SKU: &quot; + {!L10_Canceled_Items.StockKeepingUnit} + 
&quot;; Quantity: &quot; + TEXT({!L10_Canceled_Items.QuantityCanceled}) + 
&quot;; UnitPrice: &quot; + TEXT({!L10_Canceled_Items.GrossUnitPrice}) + 
&quot;; TotalAmount: &quot; +TEXT({!L10_Canceled_Items.GrossUnitPrice} * {!L10_Canceled_Items.QuantityCanceled})</expression>
    </formulas>
    <formulas>
        <name>V_Refund_Amount</name>
        <dataType>Currency</dataType>
        <expression>{!Get_Original_Order.GrandTotalAmount} - {!Get_Order_Summary_fields_with_derived_value.GrandTotalAmount}</expression>
        <scale>2</scale>
    </formulas>
