    <formulas>
        <name>AdjustedEndDatetime</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE(SUBSTITUTE(LEFT({!timeSlot.endOn}, 19), &quot;T&quot;, &quot; &quot;)) - {!EndOffSet}</expression>
    </formulas>
