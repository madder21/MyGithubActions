    <formulas>
        <name>EndOffSet</name>
        <dataType>Number</dataType>
        <expression>(((VALUE(MID({!timeSlot.endOn}, 20, 3))) + (VALUE(MID({!timeSlot.endOn}, 24, 2)) / 60)) * 
IF(LEFT(MID({!timeSlot.endOn}, 20, 1), 1) = &quot;-&quot;, -1, 1)) *(60/1440)</expression>
        <scale>10</scale>
    </formulas>
    <formulas>
        <name>Formula_TimeslotsIds</name>
        <dataType>String</dataType>
        <expression>SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE({!TextTemplate_TimeSlotIds}, &quot;[&quot;, &quot;&quot;), &quot;]&quot;, &quot;&quot;), &quot; &quot;, &quot;&quot;), &quot;,00&quot;, &quot;&quot;)</expression>
    </formulas>
    <formulas>
        <name>StartOffSet</name>
        <dataType>Number</dataType>
        <expression>(((VALUE(MID({!timeSlot.startOn}, 20, 3))) + (VALUE(MID({!timeSlot.startOn}, 24, 2)) / 60)) * 
IF(LEFT(MID({!timeSlot.startOn}, 20, 1), 1) = &quot;-&quot;, -1, 1)) *(60/1440)</expression>
        <scale>10</scale>
    </formulas>
    <formulas>
