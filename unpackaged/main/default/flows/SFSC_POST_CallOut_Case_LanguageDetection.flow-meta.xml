    <formulas>
        <description>This formula trim and let keep the &quot;language&quot; value, from the request result.
JSON format : 
[{
&quot;language_set&quot; : true,
&quot;language&quot; : &quot;fr&quot;,
&quot;isReliable_set&quot; : true,
&quot;isReliable&quot; : true,
&quot;confidence_set&quot; : true,
&quot;confidence&quot; : 7.16
}]</description>
        <name>LanguageAPIResult</name>
        <dataType>String</dataType>
        <expression>TRIM(
    SUBSTITUTE(
        SUBSTITUTE(
            MID(
               {!TXTJSONResponse}, 
                FIND(&#39;&quot;language&quot; : &quot;&#39;,{!TXTJSONResponse}) + LEN(&#39;&quot;language&quot; : &quot;&#39;),
                (
                    FIND(&#39;&quot;isReliable_set&quot; : &#39;,{!TXTJSONResponse}) -
                    (FIND(&#39;&quot;language&quot; : &quot;&#39;,{!TXTJSONResponse}) + LEN(&#39;&quot;language&quot; : &quot;&#39;))
                )
            ), 
            &#39;&quot;&#39;, &#39;&#39;
        ), 
        &#39;,&#39;, &#39;&#39;
    )
)</expression>
    </formulas>
    <formulas>
        <name>TrimDetectedLanguage</name>
        <dataType>String</dataType>
        <expression>LEFT(TRIM({!TXTDetectedLanguage}),2)</expression>
    </formulas>
    <formulas>
